{
	"@context": ["https://w3c.github.io/wot/w3c-wot-td-context.jsonld"
	],
	"name": "mything",
	"id": "urn:dev:wot:com:example:servient:myThing",
	"base": "http://localhost:8081/mything",
	"description": "This will be my Thing under Test",
	"properties": {
		"testObject": {
			"type": "object",
			"writable" : true,
			"properties": {
				"brightness": {
					"type": "number",
					"minimum": 0.0,
					"maximum": 100.0
				},
				"status" : {"type": "string"}
			},
			"forms": [{
				"href" : "http://localhost:8081/mything/properties/testObject",
				"mediaType": "application/json"
			}]
		},
		"testArray": {
			"type": "array",
			"writable" : true,
			"items": {
				"type": "number"
			},
			"forms": [{
				"href" : "http://localhost:8081/mything/properties/testArray",
				"mediaType": "application/json"
			}]
		},
		"display": {
			"label": "LEDdisplay",
			"type": "string",
			"const" : "morning,sleeping",
			"observable" : true,
			"writable" : true,
			"forms": [{
				"href" : "http://localhost:8081/mything/properties/display",
				"mediaType": "application/json"
			}]
		},
		"temp": {
			"type": "number",
			"observable" : true,
			"writable" : false,
			"forms": [{
				"href" : "http://localhost:8081/mything/properties/temp",
				"mediaType": "application/json"
			}]
		},
		"counter": {
			"observable" : true,
        	"writable" : true,
			"type": "number",
			"const" : 22,
			"forms": [{
				"href" : "http://localhost:8081/mything/properties/counter",
				"mediaType": "application/json"
			}]
		}
	},
	"actions": {
		"setCounter": {
			"label": "sets counter to desired number",
			"description": "Resets the counter to specific value",
			"input": {
			  "type": "number"
			},
			"forms": [{
					"href" : "http://localhost:8081/mything/actions/setCounter",
					"mediaType": "application/json"
				}],
			"output": {"type": "string"}
		},
		"setDisplay" : {
			"input": {
			  "type": "string"
			},
			"forms": [{
					"href" : "http://localhost:8081/mything/actions/setDisplay",
					"mediaType": "application/json"
				}],
			"output": {"type": "number"}
		},
		"getTemp": {
			"label": "get temp value",
			"forms": [{
					"href" : "http://localhost:8081/mything/actions/getTemp",
					"mediaType": "application/json"
				}],
			"output": {"type": "number"}
		},
		"setTestObject": {
			"input": {
				"type": "object", 
				"properties": { 
				    "brightness": {
				        "type": "number", 
				        "minimum": 0.0, 
				        "maximum": 100.0
				    }, 
				    "status" : {
				        "type": "string"
				    } 
				}
			},
			"forms": [{
					"href" : "http://localhost:8081/mything/actions/setTestObject",
					"mediaType": "application/json"
				}]
		},
		"setTestArray": {
			"input": {
				"type": "array", 
				"items": { "type": "number" }
			},
			"forms": [{
					"href" : "http://localhost:8081/mything/actions/setTestArray",
					"mediaType": "application/json"
				}],
			"output": {
				"type": "array", 
            	"items": { "type": "number" }
			}
		}
	},
	"events": {
		"onChange": {
			"type": "object",
			"properties": {
				"temperature": { "type": "number" }
			},
			"forms": [{
				"href" : "http://localhost:8081/mything/events/onChange",
				"mediaType": "application/json"
			}]
		}
	}
}
